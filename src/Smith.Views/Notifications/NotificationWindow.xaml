<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="260"
    Height="60"
    MinWidth="260"
    MinHeight="60"
    MaxWidth="260"
    MaxHeight="60"
    CanResize="False"
    HasSystemDecorations="False"
    Background="#eeeeee"
    Topmost="True">
    
    <Grid
        ColumnDefinitions="10,*,10"
        RowDefinitions="10,*,*,10">
        
        <TextBlock
            Grid.Column="1"
            Grid.Row="1"
            Text="{Binding Title}" />
        
        <TextBlock
            Grid.Column="1"
            Grid.Row="2"
            Text="{Binding Text}" />
        
    </Grid>
    
</Window>